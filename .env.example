# Environment variables for Weather Reports Service
# Copy this file to .env and update with your values

# Google Maps API Key (required for geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# API Key Authentication
# Set to false to disable API key authentication
API_KEYS_ENABLED=true
# Comma-separated list of valid API keys
API_KEY_LIST=apexos_reports_mobile_app_key,apexos_reports_web_key

# AWS S3 Configuration (optional - for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=your_s3_bucket_name
S3_REGION=us-east-1

# Redis Configuration (optional - for status tracking)
REDIS_URL=redis://localhost:6379

# Service Configuration
DEBUG=false
TEMP_DIR=/tmp/weather-reports
MAX_FILE_SIZE_MB=50

# Report Generation Settings
DEFAULT_TEMPLATE=professional
SUPPORTED_FORMATS=pdf,excel

# Sentry Error Tracking (optional - for production error monitoring)
SENTRY_DSN=your_sentry_dsn_here
ENVIRONMENT=development